<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121">

        <com.imangazaliev.circlemenu.CircleMenu
            android:id="@+id/homeCircleMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/sermonsMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#4CAF50"
                app:colorPressed="#4CAF50"
                app:icon="@drawable/ic_sermon_nav" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/eventsMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#F44336"
                app:colorPressed="#F44336"
                app:icon="@drawable/ic_event_nav" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/scheduleMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#9C27B0"
                app:colorPressed="#9C27B0"
                app:icon="@drawable/ic_schedule_nav" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/donateMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#FF9800"
                app:colorPressed="#FF9800"
                app:icon="@drawable/ic_donate_nav" />


            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/galleryMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#E4006B"
                app:colorPressed="#E4006B"
                app:icon="@drawable/ic_gallery_nav" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/newsFeedMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#2196F3"
                app:colorPressed="#2196F3"
                app:icon="@drawable/ic_news_nav" />

        </com.imangazaliev.circlemenu.CircleMenu>

    </RelativeLayout>

</layout>
